{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "mapbox-upload test user",
    "Resources": {
        "TestUser": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "Policies": [
                    {
                        "PolicyName": "upload",
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "s3:GetObjectAcl",
                                        "s3:GetObject"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": [
                                        "arn:aws:s3:::mapbox-upload-tests/*"
                                    ]
                                }
                            ]
                        }
                    },
                    {
                        "PolicyName": "fedtoken",
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "sts:GetFederationToken"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "TestUserKey": {
            "Type": "AWS::IAM::AccessKey",
            "Properties": {
                "UserName": {
                    "Ref": "TestUser"
                }
            }
        }
    },
    "Outputs": {
        "AccessKeyId": {
            "Value": {
                "Ref": "TestUserKey"
            }
        },
        "SecretAccessKey": {
            "Value": {
                "Fn::GetAtt": [
                    "TestUserKey",
                    "SecretAccessKey"
                ]
            }
        }
    }
}
